---
import { pickBoolean, pickString } from '../lib/props';

export interface Props {
  title?: string;
  heading?: string;
  label?: string;
  open?: boolean;
  defaultOpen?: boolean;
}

const props = Astro.props as Record<string, unknown>;
const title = pickString(props, ['title', 'heading', 'label'], 'Item');
const open = pickBoolean(props, ['open', 'defaultOpen'], false);
---

<details class="bf-accordion-item" open={open}>
  <summary>{title}</summary>
  <div class="bf-accordion-content"><slot /></div>
</details>

<style>
  .bf-accordion-item + .bf-accordion-item { margin-top: 0.5rem; }
  .bf-accordion-item summary { cursor: pointer; font-weight: 600; }
  .bf-accordion-content { margin-top: 0.4rem; color: var(--bf-muted); }
</style>
