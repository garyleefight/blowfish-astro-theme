---
import BlowfishAuthorLinks from './BlowfishAuthorLinks.astro';

interface AuthorData {
  name: string;
  bio?: string;
  image?: string;
  social?: { name: string; href: string }[];
}

export interface Props {
  data: AuthorData;
  link?: string;
}

const { data, link } = Astro.props;
---

<section class="bf-card bf-author-extra">
  {data.image && <img src={data.image} alt={data.name} />}
  <div>
    <p class="bf-muted bf-author-extra-label">Author</p>
    {link ? <a class="bf-author-extra-name" href={link}>{data.name}</a> : <p class="bf-author-extra-name">{data.name}</p>}
    {data.bio && <p class="bf-author-extra-bio">{data.bio}</p>}
    <BlowfishAuthorLinks links={data.social} />
  </div>
</section>

<style>
  .bf-author-extra {
    margin-top: 1rem;
    padding: 0.8rem 0.9rem;
    display: grid;
    gap: 0.7rem;
    grid-template-columns: auto 1fr;
    align-items: center;
  }

  .bf-author-extra img {
    width: 3rem;
    height: 3rem;
    border-radius: 999px;
    object-fit: cover;
  }

  .bf-author-extra-label {
    margin: 0;
    font-size: 0.66rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .bf-author-extra-name {
    margin: 0.1rem 0 0;
    font-weight: 700;
    color: var(--bf-text);
    text-decoration: none;
    display: inline-block;
  }

  .bf-author-extra-bio {
    margin: 0.2rem 0 0.45rem;
    color: var(--bf-muted);
    font-size: 0.92rem;
  }
</style>
