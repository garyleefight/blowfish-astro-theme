---
import BlowfishArticleMetaBasic from './BlowfishArticleMetaBasic.astro';

export interface Props {
  title: string;
  href: string;
  summary?: string;
  date?: string;
  readingTime?: string;
  thumbnail?: string;
}

const { title, href, summary, date, readingTime, thumbnail } = Astro.props;
---

<article class="bf-article-link-card bf-card">
  {thumbnail && (
    <a href={href} class="bf-article-link-card-thumb-wrap" aria-label={title}>
      <img src={thumbnail} alt="" class="bf-article-link-card-thumb" loading="lazy" />
    </a>
  )}
  <div class="bf-article-link-card-body">
    <h2><a href={href}>{title}</a></h2>
    <BlowfishArticleMetaBasic date={date} readingTime={readingTime} />
    {summary && <p>{summary}</p>}
  </div>
</article>

<style>
  .bf-article-link-card { overflow: hidden; border-radius: 0.8rem; }
  .bf-article-link-card-thumb-wrap { display: block; aspect-ratio: 16 / 9; overflow: hidden; }
  .bf-article-link-card-thumb { width: 100%; height: 100%; object-fit: cover; display: block; }
  .bf-article-link-card-body { padding: 0.8rem 0.9rem; }
  .bf-article-link-card h2 { margin: 0; font-size: 1.05rem; }
  .bf-article-link-card h2 a { color: var(--bf-text); text-decoration: none; }
  .bf-article-link-card p { margin: 0.55rem 0 0; color: var(--bf-muted); }
</style>
