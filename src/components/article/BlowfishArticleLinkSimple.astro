---
import BlowfishArticleMetaBasic from './BlowfishArticleMetaBasic.astro';

export interface Props {
  title: string;
  href: string;
  summary?: string;
  date?: string;
  readingTime?: string;
  thumbnail?: string;
}

const { title, href, summary, date, readingTime, thumbnail } = Astro.props;
---

<article class="bf-article-link-simple">
  {thumbnail && (
    <a href={href} class="bf-article-link-simple-thumb-wrap" aria-label={title}>
      <img src={thumbnail} alt="" class="bf-article-link-simple-thumb" loading="lazy" />
    </a>
  )}
  <div>
    <header>
      <h2><a href={href}>{title}</a></h2>
      <BlowfishArticleMetaBasic date={date} readingTime={readingTime} />
    </header>
    {summary && <p>{summary}</p>}
  </div>
</article>

<style>
  .bf-article-link-simple {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: minmax(0, 220px) minmax(0, 1fr);
    align-items: start;
  }

  .bf-article-link-simple-thumb-wrap {
    display: block;
    border-radius: 0.7rem;
    overflow: hidden;
    aspect-ratio: 4 / 3;
    border: 1px solid var(--bf-border);
  }

  .bf-article-link-simple-thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .bf-article-link-simple h2 { margin: 0; font-size: 1.16rem; }
  .bf-article-link-simple h2 a { color: var(--bf-text); text-decoration: none; }
  .bf-article-link-simple p { margin: 0.55rem 0 0; color: var(--bf-muted); }

  @media (max-width: 680px) {
    .bf-article-link-simple { grid-template-columns: 1fr; }
  }
</style>
