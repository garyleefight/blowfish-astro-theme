---
import { pickString } from '../lib/props';

export interface Props {
  href?: string;
  url?: string;
  link?: string;
  title?: string;
  heading?: string;
  subtitle?: string;
  description?: string;
}

const props = Astro.props as Record<string, unknown>;
const href = pickString(props, ['href', 'url', 'link']);
const title = pickString(props, ['title', 'heading']);
const subtitle = pickString(props, ['subtitle', 'description']);
---

{href ? (
  <a href={href} class="block rounded-xl border border-neutral-300 bg-neutral-50/70 p-4 text-inherit no-underline shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    {title && <h4 class="m-0 text-lg font-semibold">{title}</h4>}
    {subtitle && <p class="mt-2 text-neutral-500 dark:text-neutral-400">{subtitle}</p>}
    <slot />
  </a>
) : (
  <section class="block rounded-xl border border-neutral-300 bg-neutral-50/70 p-4 text-inherit shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    {title && <h4 class="m-0 text-lg font-semibold">{title}</h4>}
    {subtitle && <p class="mt-2 text-neutral-500 dark:text-neutral-400">{subtitle}</p>}
    <slot />
  </section>
)}
