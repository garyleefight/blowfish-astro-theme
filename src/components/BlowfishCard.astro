---
import { pickString } from '../lib/props';

export interface Props {
  href?: string;
  url?: string;
  link?: string;
  title?: string;
  heading?: string;
  subtitle?: string;
  description?: string;
}

const props = Astro.props as Record<string, unknown>;
const href = pickString(props, ['href', 'url', 'link']);
const title = pickString(props, ['title', 'heading']);
const subtitle = pickString(props, ['subtitle', 'description']);
---

{href ? (
  <a href={href} class="bf-card bf-card-link">
    {title && <h4>{title}</h4>}
    {subtitle && <p>{subtitle}</p>}
    <slot />
  </a>
) : (
  <section class="bf-card bf-card-link">
    {title && <h4>{title}</h4>}
    {subtitle && <p>{subtitle}</p>}
    <slot />
  </section>
)}

<style>
  .bf-card-link { display: block; padding: 1rem; text-decoration: none; color: inherit; }
  .bf-card-link h4 { margin: 0; }
  .bf-card-link p { margin: 0.4rem 0 0; color: var(--bf-muted); }
</style>
