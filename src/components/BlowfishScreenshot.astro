---
import { pickString } from '../lib/props';
import { t } from '../lib/i18n';

export interface Props {
  src?: string;
  url?: string;
  image?: string;
  alt?: string;
  caption?: string;
}

const props = Astro.props as Record<string, unknown>;
const src = pickString(props, ['src', 'url', 'image']);
const alt = pickString(props, ['alt', 'caption'], t('components.screenshot_alt'));
const caption = pickString(props, ['caption']);
---

<figure>
  <img class="my-0 rounded-md" src={src} alt={alt} loading="lazy" />
  {caption && <figcaption>{caption}</figcaption>}
</figure>
