---
import { pickString } from '../lib/props';

export interface Props {
  src?: string;
  url?: string;
  image?: string;
  alt?: string;
  caption?: string;
}

const props = Astro.props as Record<string, unknown>;
const src = pickString(props, ['src', 'url', 'image']);
const alt = pickString(props, ['alt', 'caption'], 'screenshot');
const caption = pickString(props, ['caption']);
---

<figure class="bf-card bf-screenshot">
  <img src={src} alt={alt} loading="lazy" />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .bf-screenshot { margin: 0; overflow: hidden; }
  .bf-screenshot img { width: 100%; display: block; object-fit: cover; }
  .bf-screenshot figcaption { padding: 0.5rem 0.75rem; color: var(--bf-muted); font-size: 0.82rem; }
</style>
