---
import { pickString } from '../lib/props';

export interface Props {
  title?: string;
  name?: string;
  label?: string;
  date?: string;
  time?: string;
}

const props = Astro.props as Record<string, unknown>;
const title = pickString(props, ['title', 'name', 'label'], 'Event');
const date = pickString(props, ['date', 'time']);
---

<li>
  <strong>{title}</strong>
  {date && <span class="bf-muted"> - {date}</span>}
  <div><slot /></div>
</li>
