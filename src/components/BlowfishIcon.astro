---
export interface Props {
  name?: string;
  class?: string;
}

const { name, class: className } = Astro.props;
const iconSrc = name ? `/blowfish-icons/${name}.svg` : null;
---

{iconSrc ? (
  <span class:list={['relative block icon', className]}>
    <img src={iconSrc} alt="" aria-hidden="true" class="h-[1em] w-[1em]" loading="lazy" decoding="async" />
  </span>
) : null}
