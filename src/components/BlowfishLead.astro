---
import { pickString } from '../lib/props';

export interface Props {
  text?: string;
  content?: string;
  lead?: string;
}

const props = Astro.props as Record<string, unknown>;
const text = pickString(props, ['text', 'content', 'lead']);
---

<p class="bf-lead">{text}<slot /></p>

<style>
  .bf-lead { font-size: 1.15rem; line-height: 1.75; color: color-mix(in srgb, var(--bf-text) 92%, white 8%); }
</style>
