---
import { pickString } from '../lib/props';

export interface Props {
  text?: string;
  content?: string;
  lead?: string;
}

const props = Astro.props as Record<string, unknown>;
const text = pickString(props, ['text', 'content', 'lead']);
---

<div class="lead text-neutral-500 dark:text-neutral-400 !mb-9 text-xl">
  {text}<slot />
</div>
