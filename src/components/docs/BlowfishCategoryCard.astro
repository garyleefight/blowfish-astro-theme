---
import BlowfishIcon from '../BlowfishIcon.astro';

export interface Props {
  href: string;
  title: string;
  description: string;
  componentCount: number;
  icon: string;
}

const { href, title, description, componentCount, icon } = Astro.props;
---

<a
  href={href}
  class="group block rounded-2xl border border-neutral-300 bg-neutral-50/70 p-5 text-inherit no-underline shadow-sm transition hover:-translate-y-0.5 hover:border-primary-500 hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800/60 dark:hover:border-primary-400"
>
  <div class="mb-3 flex items-center justify-between">
    <div class="inline-flex h-9 w-9 items-center justify-center rounded-md border border-primary-300 bg-primary-100 text-primary-700 dark:border-primary-500/60 dark:bg-primary-900/60 dark:text-primary-300">
      <BlowfishIcon name={icon} />
    </div>
    <span class="rounded-full border border-neutral-300 px-2 py-0.5 text-xs text-neutral-600 dark:border-neutral-600 dark:text-neutral-300">
      {componentCount} components
    </span>
  </div>

  <h2 class="m-0 text-xl font-semibold">{title}</h2>
  <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">{description}</p>

  <span class="mt-4 inline-flex items-center gap-2 text-sm text-primary-600 dark:text-primary-300">
    Browse blocks
    <span aria-hidden="true">â†’</span>
  </span>
</a>
