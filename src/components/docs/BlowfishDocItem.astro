---
export interface Props {
  id: string;
  title: string;
  effect: string;
  usage: string;
}

const { id, title, effect, usage } = Astro.props;
---

<section id={id} class="rounded-xl border border-neutral-300 bg-neutral-50/70 p-4 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
  <h3 class="m-0 text-xl font-semibold">{title}</h3>
  <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">{effect}</p>
  <div class="mt-3 grid gap-4 lg:grid-cols-2">
    <div>
      <p class="m-0 text-xs uppercase tracking-wide text-neutral-500 dark:text-neutral-400">Usage</p>
      <pre class="mt-2 overflow-x-auto rounded-md border border-neutral-300 bg-neutral-100 p-3 text-xs dark:border-neutral-700 dark:bg-neutral-900/60"><code>{usage}</code></pre>
    </div>
    <div>
      <p class="m-0 text-xs uppercase tracking-wide text-neutral-500 dark:text-neutral-400">Effect</p>
      <div class="mt-2 rounded-md border border-neutral-300 bg-neutral-50 p-3 dark:border-neutral-700 dark:bg-neutral-900/40">
        <slot />
      </div>
    </div>
  </div>
</section>
