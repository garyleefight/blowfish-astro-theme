---
import { pickString } from '../lib/props';

export interface Props {
  title?: string;
  heading?: string;
  label?: string;
}

const props = Astro.props as Record<string, unknown>;
const title = pickString(props, ['title', 'heading', 'label']);
---

<section class="bf-card bf-accordion">
  {title && <h3>{title}</h3>}
  <slot />
</section>

<style>
  .bf-accordion { padding: 0.8rem 1rem; }
  .bf-accordion h3 { margin: 0 0 0.6rem; font-size: 1rem; }
</style>
