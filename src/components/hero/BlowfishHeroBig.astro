---
export interface Props {
  image?: string;
  imagePosition?: string;
  caption?: string;
  alt?: string;
}

const { image, imagePosition, caption, alt = '' } = Astro.props;
---

{image && (
  <figure>
    <img
      src={image}
      alt={alt}
      class="single_hero_round nozoom w-full rounded-lg object-cover"
      style={imagePosition ? `object-position:${imagePosition};` : undefined}
    />
    {caption && <figcaption class="text-center text-sm text-neutral-700 hover:underline dark:text-neutral-400">{caption}</figcaption>}
  </figure>
)}
