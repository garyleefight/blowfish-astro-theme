---
export interface Props {
  image?: string;
  imagePosition?: string;
  caption?: string;
  alt?: string;
}

const { image, imagePosition, caption, alt = '' } = Astro.props;
---

{image && (
  <figure class="bf-hero-big-wrap">
    <img
      src={image}
      alt={alt}
      class="bf-hero-big"
      style={imagePosition ? `object-position:${imagePosition};` : undefined}
    />
    {caption && <figcaption>{caption}</figcaption>}
  </figure>
)}

<style>
  .bf-hero-big-wrap { margin: 0; }
  .bf-hero-big {
    width: 100%;
    border-radius: 0.6rem;
    display: block;
    object-fit: cover;
  }
  .bf-hero-big-wrap figcaption {
    text-align: center;
    margin-top: 0.35rem;
    color: var(--bf-muted);
    font-size: 0.85rem;
  }
</style>
