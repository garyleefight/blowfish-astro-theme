---
interface Swatch {
  name: string;
  color: string;
}

export interface Props {
  items?: Swatch[];
}

const { items = [] } = Astro.props;
---

<div class="grid gap-2 [grid-template-columns:repeat(auto-fill,minmax(180px,1fr))]">
  {items.map((item) => (
    <div class="flex items-center gap-2 rounded-lg border border-neutral-200 bg-neutral-100/60 p-2 dark:border-neutral-700 dark:bg-neutral-800/70">
      <span class="h-7 w-7 rounded-md border border-white/30" style={`background:${item.color};`} />
      <code class="text-xs">{item.name}</code>
    </div>
  ))}
</div>
