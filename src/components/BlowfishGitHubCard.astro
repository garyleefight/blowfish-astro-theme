---
import { pickString } from '../lib/props';

export interface Props {
  repo?: string;
  repository?: string;
  user?: string;
  owner?: string;
}

const props = Astro.props as Record<string, unknown>;
const repo = pickString(props, ['repo', 'repository']);
const owner = pickString(props, ['user', 'owner']);
const path = owner ? `${owner}/${repo}` : repo;
const href = `https://github.com/${path}`;
---

<a class="bf-card bf-gh" href={href} target="_blank" rel="noopener noreferrer">
  <strong>{path}</strong>
  <span class="bf-muted">Open on GitHub</span>
</a>

<style>
  .bf-gh { display: grid; gap: 0.2rem; padding: 0.8rem 1rem; color: inherit; text-decoration: none; }
</style>
