---
import { pickString } from '../lib/props';

export interface Props {
  author?: string;
  name?: string;
  cite?: string;
  source?: string;
}

const props = Astro.props as Record<string, unknown>;
const author = pickString(props, ['author', 'name']);
const cite = pickString(props, ['cite', 'source']);
---

<blockquote class="m-0 rounded-xl border border-neutral-300 border-l-4 border-l-primary-500 bg-neutral-50/70 px-4 py-3 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
  <slot />
  {(author || cite) && <footer class="mt-2 text-sm text-neutral-500 dark:text-neutral-400">{author}{author && cite ? ', ' : ''}{cite}</footer>}
</blockquote>
