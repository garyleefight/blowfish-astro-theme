---
import { pickString } from '../lib/props';

export interface Props {
  author?: string;
  name?: string;
  cite?: string;
  source?: string;
}

const props = Astro.props as Record<string, unknown>;
const author = pickString(props, ['author', 'name']);
const cite = pickString(props, ['cite', 'source']);
---

<blockquote class="bf-card bf-blockquote">
  <slot />
  {(author || cite) && <footer>{author}{author && cite ? ', ' : ''}{cite}</footer>}
</blockquote>

<style>
  .bf-blockquote { margin: 0; padding: 0.9rem 1rem; border-left: 4px solid var(--bf-primary); }
  .bf-blockquote footer { margin-top: 0.5rem; color: var(--bf-muted); font-size: 0.9rem; }
</style>
