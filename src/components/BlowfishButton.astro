---
export interface Props {
  href?: string;
  target?: string;
  rel?: string;
}

const { href, target, rel } = Astro.props;
---

<a
  class="!rounded-md bg-primary-600 px-4 py-2 !text-neutral !no-underline hover:!bg-primary-500 dark:bg-primary-800 dark:hover:!bg-primary-700"
  href={href}
  target={target}
  rel={rel}
  role="button"
>
  <slot />
</a>
