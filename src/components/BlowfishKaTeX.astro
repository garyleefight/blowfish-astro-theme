---
import { pickBoolean, pickString } from '../lib/props';

export interface Props {
  equation?: string;
  expr?: string;
  formula?: string;
  display?: boolean;
  block?: boolean;
}

const props = Astro.props as Record<string, unknown>;
const equation = pickString(props, ['equation', 'expr', 'formula']);
const display = pickBoolean(props, ['display', 'block'], false);
---

{display ? (
  <div class="bf-card bf-katex">{equation}</div>
) : (
  <span class="bf-katex-inline">{equation}</span>
)}

<style>
  .bf-katex { padding: 0.8rem 1rem; font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }
  .bf-katex-inline { font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }
</style>
