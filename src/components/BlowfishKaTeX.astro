---
import { pickBoolean, pickString } from '../lib/props';

export interface Props {
  equation?: string;
  expr?: string;
  formula?: string;
  display?: boolean;
  block?: boolean;
}

const props = Astro.props as Record<string, unknown>;
const equation = pickString(props, ['equation', 'expr', 'formula']);
const display = pickBoolean(props, ['display', 'block'], false);
---

{display ? (
  <div class="rounded-md border border-neutral-200 px-4 py-3 font-mono shadow-sm dark:border-neutral-700">{equation}</div>
) : (
  <span class="font-mono">{equation}</span>
)}
