---
export interface Props {
  copyright?: string;
}

const { copyright = `Copyright ${new Date().getFullYear()}` } = Astro.props;
---

<footer class="bf-site-footer">
  <div class="bf-site-footer-inner">
    <p>{copyright}</p>
  </div>
</footer>

<style>
  .bf-site-footer {
    border-top: 1px solid var(--bf-border);
    margin-top: 2rem;
  }

  .bf-site-footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1.2rem 1rem 2rem;
    color: var(--bf-muted);
    font-size: 0.92rem;
  }

  .bf-site-footer-inner p {
    margin: 0;
  }
</style>
