---
export interface Props {
  prevHref?: string;
  nextHref?: string;
}

const { prevHref, nextHref } = Astro.props;
---

{(prevHref || nextHref) && (
  <nav class="bf-pagination" aria-label="Pagination">
    <div>{prevHref ? <a href={prevHref}>Previous</a> : <span />}</div>
    <div>{nextHref ? <a href={nextHref}>Next</a> : <span />}</div>
  </nav>
)}

<style>
  .bf-pagination {
    margin-top: 1.2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.8rem;
  }

  .bf-pagination div:last-child {
    text-align: right;
  }

  .bf-pagination a {
    color: var(--bf-primary);
    text-decoration: none;
    font-weight: 600;
  }
</style>
