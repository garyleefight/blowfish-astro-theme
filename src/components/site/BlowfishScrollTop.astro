---
import { t } from '../../lib/i18n';
---

<button
  class="fixed right-4 bottom-4 z-45 h-9 w-9 rounded-full border border-neutral-300 bg-neutral-100/90 text-neutral-900 opacity-0 shadow-lg transition dark:border-neutral-700 dark:bg-neutral-800/90 dark:text-neutral"
  id="bf-scroll-top"
  type="button"
  aria-label={t('nav.scroll_to_top_title')}
  title={t('nav.scroll_to_top_title')}
>
  â†‘
</button>

<script is:inline>
  const btn = document.getElementById('bf-scroll-top');
  const toggle = () => {
    if (!btn) return;
    btn.style.opacity = window.scrollY > 300 ? '1' : '0';
    btn.style.pointerEvents = window.scrollY > 300 ? 'auto' : 'none';
  };
  window.addEventListener('scroll', toggle, { passive: true });
  toggle();
  btn?.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
</script>
