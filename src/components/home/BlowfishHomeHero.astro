---
import BlowfishHomeRecent from './BlowfishHomeRecent.astro';
import type { BlowfishHomepageConfig, BlowfishRecentArticle } from '../../types/homepage';

export interface Props {
  config: BlowfishHomepageConfig;
  articles?: BlowfishRecentArticle[];
  contentHtml?: string;
}

const { config, articles = [], contentHtml = '' } = Astro.props;
const heroImage = config.homepageImage || config.image || '';
const avatar = config.image || config.homepageImage;
---

<article class="bf-home-hero-wrap">
  <div class="bf-home-hero">
    {heroImage && <img src={heroImage} alt="" class="bf-home-hero-bg" role="presentation" />}
    <div class="bf-home-hero-filter" />
    <header class="bf-home-hero-content">
      {avatar && <img class="bf-home-hero-avatar" src={avatar} alt={config.imageAlt || config.title || 'Author'} />}
      <h1>{config.title || 'Author Name'}</h1>
      {config.subtitle && <h2>{config.subtitle}</h2>}
      {config.links && config.links.length > 0 && (
        <div class="bf-home-hero-links">
          {config.links.map((link) => (
            <a href={link.href} target="_blank" rel="noopener noreferrer">{link.label}</a>
          ))}
        </div>
      )}
      <section class="bf-home-hero-prose">
        {contentHtml ? <div set:html={contentHtml} /> : config.description ? <p>{config.description}</p> : <slot />}
      </section>
    </header>
  </div>
</article>

{config.showRecent && (
  <BlowfishHomeRecent
    articles={articles}
    limit={config.recentLimit || 4}
    cardView={Boolean(config.cardView)}
    showMoreLink={config.showMoreLink}
  />
)}

<style>
  .bf-home-hero-wrap {
    max-width: 100%;
  }

  .bf-home-hero {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    min-height: 28rem;
    box-shadow: var(--bf-shadow);
  }

  .bf-home-hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .bf-home-hero-filter {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(32, 90, 160, 0.78), rgba(87, 56, 150, 0.74));
    mix-blend-mode: multiply;
  }

  .bf-home-hero-content {
    position: relative;
    z-index: 1;
    padding: 2rem 1.25rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: #edf3fb;
  }

  .bf-home-hero-avatar {
    width: 9rem;
    height: 9rem;
    border-radius: 999px;
    object-fit: cover;
    margin: 0 0 0.8rem;
    border: 2px solid rgba(237, 243, 251, 0.7);
  }

  .bf-home-hero-content h1 {
    margin: 0;
    font-size: clamp(1.9rem, 3vw, 2.5rem);
    font-weight: 800;
  }

  .bf-home-hero-content h2 {
    margin: 0.2rem 0 0;
    font-size: 1.18rem;
    color: rgba(237, 243, 251, 0.9);
    font-weight: 500;
  }

  .bf-home-hero-links {
    margin-top: 0.8rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    justify-content: center;
  }

  .bf-home-hero-links a {
    color: #c5defc;
    text-decoration: none;
    font-weight: 600;
  }

  .bf-home-hero-prose {
    margin-top: 1rem;
    width: min(100%, 760px);
    color: rgba(237, 243, 251, 0.96);
  }
</style>
