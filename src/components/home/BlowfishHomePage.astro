---
import BlowfishHomeRecent from './BlowfishHomeRecent.astro';
import type { BlowfishHomepageConfig, BlowfishRecentArticle } from '../../types/homepage';

export interface Props {
  config: BlowfishHomepageConfig;
  contentHtml?: string;
  articles?: BlowfishRecentArticle[];
}

const { config, contentHtml = '', articles = [] } = Astro.props;
---

<article class="bf-home-page-layout">
  {config.title && (
    <header>
      <h1>{config.title}</h1>
    </header>
  )}
  <section class="bf-home-page-prose">{contentHtml ? <div set:html={contentHtml} /> : <slot />}</section>
</article>

{config.showRecent && (
  <BlowfishHomeRecent
    articles={articles}
    limit={config.recentLimit || 4}
    cardView={Boolean(config.cardView)}
    showMoreLink={config.showMoreLink}
  />
)}

<style>
  .bf-home-page-layout h1 {
    margin: 0;
    font-size: clamp(1.9rem, 3vw, 2.5rem);
    font-weight: 800;
  }

  .bf-home-page-prose {
    margin-top: 0.7rem;
  }
</style>
