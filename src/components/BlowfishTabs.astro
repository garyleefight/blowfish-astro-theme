---
import { pickString } from '../lib/props';

export interface Props {
  defaultTab?: string;
  default?: string;
  selected?: string;
}

const props = Astro.props as Record<string, unknown>;
const defaultTab = pickString(props, ['defaultTab', 'default', 'selected']);
---

<section class="bf-card bf-tabs" data-default-tab={defaultTab}>
  <slot />
</section>

<style>
  .bf-tabs { padding: 0.8rem 1rem; }
  .bf-tabs :global(.bf-tab[data-active='false']) { display: none; }
</style>
