---
import { pickString } from '../lib/props';

export interface Props {
  name?: string;
  shortcode?: string;
  type?: string;
  params?: Record<string, unknown>;
  args?: Record<string, unknown>;
}

const props = Astro.props as Record<string, unknown>;
const name = pickString(props, ['name', 'shortcode', 'type'], 'shortcode');
const params = (props.params as Record<string, unknown>) || (props.args as Record<string, unknown>) || {};
---

<div class="bf-card bf-shortcode">
  <p><strong>Shortcode:</strong> {name}</p>
  <pre><code>{JSON.stringify(params, null, 2)}</code></pre>
  <slot />
</div>

<style>
  .bf-shortcode { padding: 0.8rem 1rem; }
  .bf-shortcode pre { margin: 0.4rem 0 0; overflow: auto; }
</style>
