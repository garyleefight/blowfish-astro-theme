---
import { pickString } from '../lib/props';

export interface Props {
  code?: string;
  diagram?: string;
  graph?: string;
}

const props = Astro.props as Record<string, unknown>;
const code = pickString(props, ['code', 'diagram', 'graph']);
---

<pre class="bf-card bf-mermaid"><code class="language-mermaid">{code}</code></pre>

<style>
  .bf-mermaid { padding: 0.8rem 1rem; overflow: auto; }
</style>
