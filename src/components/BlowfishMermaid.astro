---
import { pickString } from '../lib/props';

export interface Props {
  code?: string;
  diagram?: string;
  graph?: string;
}

const props = Astro.props as Record<string, unknown>;
const code = pickString(props, ['code', 'diagram', 'graph']);
---

<pre class="bf-mermaid overflow-auto rounded-md border border-neutral-200 px-4 py-3 shadow-sm dark:border-neutral-700"><code class="language-mermaid">{code}</code></pre>
