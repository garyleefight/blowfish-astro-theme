---
import { pickString } from '../lib/props';

export interface Props {
  emoji?: string;
  symbol?: string;
  char?: string;
  label?: string;
  name?: string;
}

const props = Astro.props as Record<string, unknown>;
const emoji = pickString(props, ['emoji', 'symbol', 'char']);
const label = pickString(props, ['label', 'name'], 'emoji');
---

<span role="img" aria-label={label}>{emoji}</span>
