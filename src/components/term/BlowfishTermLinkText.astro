---
/**
 * Term link text component - Displays taxonomy term as a simple text link
 * Upstream parity: layouts/partials/term-link/text.html
 */

export interface Props {
  title: string;
  href: string;
  count?: number;
  showTermCount?: boolean;
}

const {
  title,
  href,
  count,
  showTermCount = true,
} = Astro.props;
---

<article class="w-full px-2 my-3 overflow-hidden sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4">
  <h2 class="flex items-center">
    <a
      class="text-xl font-medium decoration-primary-500 hover:underline hover:underline-offset-2"
      href={href}
    >
      {title}
    </a>
    {showTermCount && typeof count === 'number' && (
      <>
        <span class="px-2 text-base text-primary-500">&middot;</span>
        <span class="text-base text-neutral-400">{count}</span>
      </>
    )}
  </h2>
</article>
