---
import { pickBoolean, pickString } from '../lib/props';

export interface Props {
  summary?: string;
  title?: string;
  open?: boolean;
  defaultOpen?: boolean;
  expanded?: boolean;
}

const props = Astro.props as Record<string, unknown>;
const summary = pickString(props, ['summary', 'title'], 'Details');
const open = pickBoolean(props, ['open', 'defaultOpen', 'expanded'], false);
---

<details class="bf-card bf-details" open={open}>
  <summary>{summary}</summary>
  <div><slot /></div>
</details>

<style>
  .bf-details { padding: 0.7rem 0.9rem; }
  .bf-details summary { cursor: pointer; font-weight: 600; }
  .bf-details div { margin-top: 0.5rem; color: var(--bf-muted); }
</style>
