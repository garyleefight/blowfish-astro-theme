<button id="bf-zen-toggle" class="bf-meta-icon" type="button" title="Toggle Zen Mode">
  <img src="/blowfish-icons/expand.svg" alt="" />
</button>

<script is:inline>
  const btn = document.getElementById('bf-zen-toggle');
  btn?.addEventListener('click', () => {
    document.documentElement.classList.toggle('bf-zen-mode');
  });
</script>

<style>
  .bf-meta-icon {
    color: var(--bf-muted);
    border: 0;
    background: transparent;
    cursor: pointer;
    font-size: 1rem;
    width: 1rem;
    height: 1rem;
    padding: 0;
  }

  .bf-meta-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: invert(82%) sepia(8%) saturate(490%) hue-rotate(177deg) brightness(88%) contrast(88%);
  }

  :global(html[data-theme='light']) .bf-meta-icon img {
    filter: invert(29%) sepia(15%) saturate(496%) hue-rotate(177deg) brightness(91%) contrast(90%);
  }

  :global(html.bf-zen-mode .bf-site-header), :global(html.bf-zen-mode .bf-site-footer) { display: none; }
  :global(html.bf-zen-mode .bf-site-main) { max-width: 850px; }
</style>
