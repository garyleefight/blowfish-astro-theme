---
import BlowfishIcon from '../BlowfishIcon.astro';

export interface Props { url: string; }
const { url } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="bf-meta-icon" title="Edit">
  <BlowfishIcon name="edit" size="1rem" />
</a>

<style>
  .bf-meta-icon { color: var(--bf-muted); text-decoration: none; font-size: 1rem; display: inline-flex; }
</style>
