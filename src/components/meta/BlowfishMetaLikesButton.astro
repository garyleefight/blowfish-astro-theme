<button id="bf-likes-button" class="bf-likes-button" type="button" title="Like">
  <span id="bf-likes-heart-empty" class="bf-like-icon"><img src="/blowfish-icons/heart-empty.svg" alt="" /></span>
  <span id="bf-likes-heart-full" class="bf-like-icon" hidden><img src="/blowfish-icons/heart.svg" alt="" /></span>
  <span id="bf-likes-text">Like</span>
</button>

<script is:inline>
  const btn = document.getElementById('bf-likes-button');
  const text = document.getElementById('bf-likes-text');
  const empty = document.getElementById('bf-likes-heart-empty');
  const full = document.getElementById('bf-likes-heart-full');

  btn?.addEventListener('click', () => {
    if (!text || !empty || !full) return;
    const liked = text.textContent === 'Liked';
    text.textContent = liked ? 'Like' : 'Liked';
    empty.hidden = !liked;
    full.hidden = liked;
  });
</script>

<style>
  .bf-likes-button {
    border: 1px solid color-mix(in srgb, var(--bf-primary) 60%, var(--bf-border));
    color: var(--bf-primary);
    border-radius: 0.4rem;
    padding: 0.15rem 0.45rem;
    background: transparent;
    cursor: pointer;
    font-size: 0.8rem;
    display: inline-flex;
    align-items: center;
    gap: 0.2rem;
  }

  .bf-like-icon {
    display: inline-flex;
    width: 0.9rem;
    height: 0.9rem;
  }

  .bf-like-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: invert(53%) sepia(47%) saturate(2452%) hue-rotate(193deg) brightness(99%) contrast(93%);
  }
</style>
