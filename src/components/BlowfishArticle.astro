---
import { pickString } from '../lib/props';

export interface Props {
  title?: string;
  heading?: string;
  summary?: string;
  description?: string;
  date?: string;
  publishedAt?: string;
  link?: string;
  href?: string;
  url?: string;
}

const props = Astro.props as Record<string, unknown>;
const title = pickString(props, ['title', 'heading'], 'Article');
const summary = pickString(props, ['summary', 'description']);
const date = pickString(props, ['date', 'publishedAt']);
const link = pickString(props, ['link', 'href', 'url'], '#');
---

<article class="bf-card bf-article">
  <h3><a href={link}>{title}</a></h3>
  {date && <p class="bf-muted">{date}</p>}
  {summary && <p>{summary}</p>}
  <slot />
</article>

<style>
  .bf-article { padding: 1rem; }
  .bf-article h3 { margin: 0; }
  .bf-article h3 a { color: var(--bf-text); text-decoration: none; }
  .bf-article p { margin: 0.4rem 0 0; }
</style>
