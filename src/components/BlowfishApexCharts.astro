---
import { pickNumber, pickString } from '../lib/props';

export interface Props {
  type?: string;
  chartType?: string;
  height?: number;
  h?: number;
  options?: string;
  config?: string;
  series?: string;
  data?: string;
}

const props = Astro.props as Record<string, unknown>;
const type = pickString(props, ['type', 'chartType'], 'line');
const height = pickNumber(props, ['height', 'h'], 320);
const options = pickString(props, ['options', 'config'], '{}');
const series = pickString(props, ['series', 'data'], '[]');
---

<div class="bf-card bf-code" data-bf-apex data-type={type} data-height={height} data-options={options} data-series={series}>
  <p><strong>ApexCharts placeholder</strong> ({type})</p>
  <p class="bf-muted">Install an ApexCharts Astro integration and hydrate this node.</p>
</div>
