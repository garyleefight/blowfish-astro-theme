---
import { pickArray } from '../lib/props';
import BlowfishKeyword from './BlowfishKeyword.astro';

interface KeywordItem {
  text?: string;
  label?: string;
  href?: string;
  url?: string;
  icon?: string;
}

export interface Props {
  items?: KeywordItem[];
  keywords?: KeywordItem[];
}

const props = Astro.props as Record<string, unknown>;
const items = pickArray<KeywordItem>(props, ['items', 'keywords']);
---

<div class="flex flex-row flex-wrap items-center space-x-2">
  {items.map((item) => (
    <BlowfishKeyword text={item.text || item.label} href={item.href || item.url} icon={item.icon} />
  ))}
</div>
