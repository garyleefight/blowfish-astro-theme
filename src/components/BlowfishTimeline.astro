---
import { pickString } from '../lib/props';

export interface Props {
  title?: string;
  heading?: string;
  label?: string;
}

const props = Astro.props as Record<string, unknown>;
const title = pickString(props, ['title', 'heading', 'label']);
---

<section>
  {title && <h3 class="mb-4 text-base font-semibold text-neutral-900 dark:text-neutral-100">{title}</h3>}
  <ol class="list-none border-s-2 border-primary-500 dark:border-primary-300"><slot /></ol>
</section>
