---
interface ListItem {
  title: string;
  summary?: string;
  href?: string;
}

export interface Props {
  items?: ListItem[];
}

const { items = [] } = Astro.props;
---

<section class="space-y-10 w-full mt-10 mb-10">
  {items.map((item) => (
    <article class="rounded-xl border border-neutral-300 bg-neutral-50/70 p-4 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
      <h4 class="m-0 text-lg font-semibold">
        {item.href ? (
          <a class="text-neutral-900 no-underline hover:text-primary-600 dark:text-neutral dark:hover:text-primary-400" href={item.href}>{item.title}</a>
        ) : (
          item.title
        )}
      </h4>
      {item.summary && <p class="mt-2 text-neutral-500 dark:text-neutral-400">{item.summary}</p>}
    </article>
  ))}
</section>
