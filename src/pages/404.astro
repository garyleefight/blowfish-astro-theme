---
import BlowfishSiteLayout from '../layouts/site/BlowfishSiteLayout.astro';
import { t } from '../lib/i18n';
---

<BlowfishSiteLayout title={t('error.404_title')} nav={[{ label: t('nav.home'), href: '/' }, { label: t('nav.theme_list'), href: '/theme/list' }]}> 
  <section class="rounded-xl border border-neutral-300 bg-neutral-50/70 px-4 py-12 text-center shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    <h1 class="m-0 text-4xl font-extrabold">{t('error.404_title')}</h1>
    <p class="mt-6 text-neutral-500 dark:text-neutral-400">{t('error.404_error')}</p>
    <p class="mt-2 text-neutral-500 dark:text-neutral-400">{t('error.404_description')}</p>
  </section>
</BlowfishSiteLayout>
