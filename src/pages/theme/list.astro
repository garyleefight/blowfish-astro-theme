---
import BlowfishArticleLinkCard from '../../components/article/BlowfishArticleLinkCard.astro';
import BlowfishArticleLinkSimple from '../../components/article/BlowfishArticleLinkSimple.astro';
import BlowfishBreadcrumbs from '../../components/site/BlowfishBreadcrumbs.astro';
import BlowfishPagination from '../../components/site/BlowfishPagination.astro';
import BlowfishSiteLayout from '../../layouts/site/BlowfishSiteLayout.astro';

const posts = [
  { title: 'A post about Astro themes', date: '2026-02-17', readingTime: '6 min', summary: 'Implementing a full Blowfish parity layer.', href: '#', thumbnail: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=900' },
  { title: 'Cloudflare Pages checklist', date: '2026-02-16', readingTime: '4 min', summary: 'Static-only delivery practices.', href: '#', thumbnail: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=900' },
  { title: 'Shortcode compatibility notes', date: '2026-02-15', readingTime: '5 min', summary: 'Mapping Hugo shortcodes to Astro components.', href: '#', thumbnail: 'https://images.unsplash.com/photo-1518770660439-4636190af475?w=900' }
];
---

<BlowfishSiteLayout title="List Template" nav={[{ label: 'Home', href: '/' }, { label: 'Homepage Layout', href: '/homepage-layout' }]}> 
  <BlowfishBreadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Blog' }]} />
  <header class="bf-list-header">
    <h1>Blog</h1>
    <p class="bf-muted">List template parity target (`_default/list.html`).</p>
  </header>

  <section class="bf-list-simple">
    {posts.map((post) => <BlowfishArticleLinkSimple {...post} />)}
  </section>

  <h2 class="bf-list-subtitle">Card view</h2>
  <section class="bf-list-card">
    {posts.map((post) => <BlowfishArticleLinkCard {...post} />)}
  </section>

  <BlowfishPagination prevHref="#" nextHref="#" />
</BlowfishSiteLayout>

<style>
  .bf-list-header h1 { margin: 0; }
  .bf-list-simple { display: grid; gap: 1rem; margin-top: 1rem; }
  .bf-list-subtitle { margin: 1.35rem 0 0.7rem; font-size: 1.1rem; }
  .bf-list-card { display: grid; gap: 0.9rem; grid-template-columns: repeat(3, minmax(0, 1fr)); }

  @media (max-width: 980px) {
    .bf-list-card { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }

  @media (max-width: 620px) {
    .bf-list-card { grid-template-columns: 1fr; }
  }
</style>
