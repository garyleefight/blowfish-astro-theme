---
import BlowfishBreadcrumbs from '../../components/site/BlowfishBreadcrumbs.astro';
import BlowfishPagination from '../../components/site/BlowfishPagination.astro';
import BlowfishSiteLayout from '../../layouts/site/BlowfishSiteLayout.astro';

const tag = 'astro';
const posts = [
  { title: 'Astro layout composition guide', date: '2026-02-17', summary: 'Patterns for reusable layout architecture.', href: '#' },
  { title: 'Astro island decisions', date: '2026-02-16', summary: 'When to hydrate and when to stay static.', href: '#' }
];
---

<BlowfishSiteLayout title="Term Template" nav={[{ label: 'Home', href: '/' }, { label: 'Tags', href: '/theme/terms' }]}> 
  <BlowfishBreadcrumbs items={[{ label: 'Home', href: '/' }, { label: 'Tags', href: '/theme/terms' }, { label: tag }]} />
  <header>
    <h1>Tag: {tag}</h1>
    <p class="bf-muted">Term template parity target (`_default/term.html`).</p>
  </header>

  <section class="bf-term-list">
    {posts.map((post) => (
      <article class="bf-card">
        <h2><a href={post.href}>{post.title}</a></h2>
        <p class="bf-muted">{post.date}</p>
        <p>{post.summary}</p>
      </article>
    ))}
  </section>
  <BlowfishPagination prevHref="#" nextHref="#" />
</BlowfishSiteLayout>

<style>
  .bf-term-list { margin-top: 1rem; display: grid; gap: 0.8rem; }
  .bf-term-list article { padding: 0.9rem 1rem; }
  .bf-term-list h2 { margin: 0; font-size: 1.08rem; }
  .bf-term-list a { color: var(--bf-text); text-decoration: none; }
  .bf-term-list p { margin: 0.45rem 0 0; }
</style>
