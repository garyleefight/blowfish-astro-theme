---
import BlowfishSiteLayout from '../../layouts/site/BlowfishSiteLayout.astro';
import BlowfishBlocksHeader from '../../components/docs/BlowfishBlocksHeader.astro';

const layoutCards = [
  {
    href: '/blocks/previews/profile',
    title: 'Homepage: profile',
    description: 'Centered author profile + optional homepage content and recent articles.',
    badge: 'homepage.layout="profile"',
  },
  {
    href: '/blocks/previews/page',
    title: 'Homepage: page',
    description: 'Traditional page-style homepage content with optional recent articles list.',
    badge: 'homepage.layout="page"',
  },
  {
    href: '/blocks/previews/hero',
    title: 'Homepage: hero',
    description: 'Hero banner homepage with image treatment and author presentation.',
    badge: 'homepage.layout="hero"',
  },
  {
    href: '/blocks/previews/background',
    title: 'Homepage: background',
    description: 'Full-page background image/video style with content layered above.',
    badge: 'homepage.layout="background"',
  },
  {
    href: '/blocks/previews/card',
    title: 'Homepage: card',
    description: 'Split card style with content and large homepage image.',
    badge: 'homepage.layout="card"',
  },
  {
    href: '/blocks/previews/custom',
    title: 'Homepage: custom',
    description: 'Custom slot-driven homepage composition, similar to Blowfish custom override.',
    badge: 'homepage.layout="custom"',
  },
];
---

<BlowfishSiteLayout
  title="Blowfish Blocks: Layouts"
  description="Layout-oriented demos and full-page previews."
  siteTitle="Blowfish Blocks"
  nav={[
    { label: 'All Blocks', href: '/' },
    { label: 'Layouts', href: '/blocks/layouts' },
    { label: 'Theme', href: '/theme/list' },
  ]}
  headerLayout="basic"
  enableAppearanceToggle={true}
  footerMenu={[
    { name: 'All Blocks', url: '/', pre: 'list' },
    { name: 'Content', url: '/blocks/content', pre: 'file-lines' },
  ]}
>
  <BlowfishBlocksHeader
    title="Layout Blocks"
    description="Open dedicated preview pages to inspect Blowfish homepage layout variants."
  />

  <section class="mt-8 grid gap-4 sm:grid-cols-2">
    {layoutCards.map((card) => (
      <a
        href={card.href}
        class="group block rounded-2xl border border-neutral-300 bg-neutral-50/70 p-5 text-inherit no-underline shadow-sm transition hover:-translate-y-0.5 hover:border-primary-500 hover:shadow-md dark:border-neutral-700 dark:bg-neutral-800/60 dark:hover:border-primary-400"
      >
        <div class="mb-3 inline-flex rounded-full border border-primary-300 bg-primary-100 px-2 py-0.5 text-xs text-primary-700 dark:border-primary-500/60 dark:bg-primary-900/60 dark:text-primary-300">
          {card.badge}
        </div>
        <h2 class="m-0 text-xl font-semibold">{card.title}</h2>
        <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">{card.description}</p>
        <span class="mt-4 inline-flex items-center gap-2 text-sm text-primary-600 dark:text-primary-300">
          Open preview
          <span aria-hidden="true">â†’</span>
        </span>
      </a>
    ))}
  </section>

  <section class="mt-8 rounded-2xl border border-neutral-300 bg-neutral-50/70 p-5 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    <h2 class="m-0 text-xl font-semibold">Usage</h2>
    <pre class="mt-3 overflow-x-auto rounded-md border border-neutral-300 bg-neutral-100 p-3 text-xs dark:border-neutral-700 dark:bg-neutral-900/60"><code>{`---
import BlowfishSiteLayout from '@garyleefight/blowfish-astro-theme/layouts/site/BlowfishSiteLayout.astro';
---

<BlowfishSiteLayout
  title="Home"
  siteTitle="My Site"
  homepage={{
    layout: "hero", // profile | page | hero | background | card | custom
    title: "Your Name",
    subtitle: "Your tagline",
    homepageImage: "/images/hero.jpg",
    // background layout only:
    // backgroundVideo: "/videos/home-bg.webm", // takes precedence over backgroundImage
    // backgroundImage: "/images/home-bg.jpg",  // fallback + poster
    showRecent: true,
    showRecentItems: 3
  }}
  homepageArticles={[
    { title: "Post 1", href: "/posts/post-1" },
    { title: "Post 2", href: "/posts/post-2" }
  ]}
  enableAppearanceToggle={true}
>
  <p>Homepage content</p>
</BlowfishSiteLayout>`}</code></pre>
  </section>
</BlowfishSiteLayout>
