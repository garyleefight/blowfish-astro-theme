---
import BlowfishSiteLayout from '../layouts/site/BlowfishSiteLayout.astro';
import { t } from '../lib/i18n';
---

<BlowfishSiteLayout
  title={t('search.page_title')}
  description={t('search.page_description')}
  nav={[{ label: t('nav.home'), href: '/' }, { label: t('nav.theme_list'), href: '/theme/list' }]}
  enableSearch={true}
>
  <section class="rounded-xl border border-neutral-300 bg-neutral-50/70 p-4 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    <h1 class="m-0 text-3xl font-bold">{t('search.page_title')}</h1>
    <p class="mt-2 text-neutral-500 dark:text-neutral-400">{t('search.page_intro')}</p>
    <button
      id="open-search-inline"
      class="mt-4 rounded border border-primary-500 bg-transparent px-4 py-2 font-semibold hover:border-transparent hover:text-primary-500"
      type="button"
    >
      {t('search.open_button_title')}
    </button>
  </section>

  <script is:inline>
    const openBtn = document.getElementById('open-search-inline');
    openBtn?.addEventListener('click', () => window.displaySearch?.());
    window.addEventListener('DOMContentLoaded', () => window.displaySearch?.());
  </script>
</BlowfishSiteLayout>
