---
import BlowfishBaseLayout from '../layouts/BlowfishBaseLayout.astro';
import BlowfishAccordion from '../components/BlowfishAccordion.astro';
import BlowfishAccordionItem from '../components/BlowfishAccordionItem.astro';
import BlowfishAlert from '../components/BlowfishAlert.astro';
import BlowfishArticle from '../components/BlowfishArticle.astro';
import BlowfishBadge from '../components/BlowfishBadge.astro';
import BlowfishBlockquote from '../components/BlowfishBlockquote.astro';
import BlowfishButton from '../components/BlowfishButton.astro';
import BlowfishCard from '../components/BlowfishCard.astro';
import BlowfishDetails from '../components/BlowfishDetails.astro';
import BlowfishFigure from '../components/BlowfishFigure.astro';
import BlowfishGallery from '../components/BlowfishGallery.astro';
import BlowfishGitHubCard from '../components/BlowfishGitHubCard.astro';
import BlowfishKaTeX from '../components/BlowfishKaTeX.astro';
import BlowfishLead from '../components/BlowfishLead.astro';
import BlowfishMermaid from '../components/BlowfishMermaid.astro';
import BlowfishTab from '../components/BlowfishTab.astro';
import BlowfishTabs from '../components/BlowfishTabs.astro';
import BlowfishTimeline from '../components/BlowfishTimeline.astro';
import BlowfishTimelineItem from '../components/BlowfishTimelineItem.astro';
import BlowfishTypeIt from '../components/BlowfishTypeIt.astro';
import BlowfishVideo from '../components/BlowfishVideo.astro';
import BlowfishYouTubeLite from '../components/BlowfishYouTubeLite.astro';
import '../styles/theme.css';

const sampleVideo =
  'https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.mp4';
---

<BlowfishBaseLayout title="Blowfish Astro Theme Docs" description="Component docs and visual examples">
  <header class="docs-hero bf-card">
    <div>
      <h1>Blowfish Astro Theme Documentation</h1>
      <p class="bf-muted">Visual preview + usage examples for core components.</p>
    </div>
    <div class="docs-badges">
      <BlowfishBadge label="Static-first" variant="success" />
      <BlowfishBadge label="Astro-native" variant="primary" />
      <BlowfishBadge label="Blowfish-compatible" variant="warning" />
    </div>
  </header>

  <section class="docs-block bf-card">
    <h2>Alert, Badge, Button</h2>
    <div class="docs-demo">
      <BlowfishAlert style="info" heading="Status" text="Theme package is active." />
      <BlowfishButton url="https://astro.build" text="Open Astro" style="outline" target="_blank" rel="noopener noreferrer" />
    </div>
    <pre><code>{`<BlowfishBadge label="Static-first" variant="success" />
<BlowfishAlert style="info" heading="Status" text="Theme package is active." />
<BlowfishButton url="https://astro.build" text="Open Astro" style="outline" />`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Lead and Blockquote</h2>
    <div class="docs-demo">
      <BlowfishLead lead="This is a lead paragraph with stronger visual emphasis." />
      <BlowfishBlockquote name="Sirui Li" source="Personal note">
        Build for clarity and reuse. Themes should feel familiar and practical.
      </BlowfishBlockquote>
    </div>
    <pre><code>{`<BlowfishLead lead="This is a lead paragraph." />
<BlowfishBlockquote name="Sirui Li" source="Personal note">
  Build for clarity and reuse.
</BlowfishBlockquote>`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Article and Card</h2>
    <div class="docs-grid-2">
      <BlowfishArticle title="Migrating Blowfish to Astro" description="How shortcode compatibility works." date="2026-02-17" href="#" />
      <BlowfishCard title="Quickstart" description="Install package and import styles." href="#" />
    </div>
    <pre><code>{`<BlowfishArticle title="Migrating Blowfish to Astro" description="..." date="2026-02-17" href="#" />
<BlowfishCard title="Quickstart" description="Install package and import styles." href="#" />`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Details and Accordion</h2>
    <div class="docs-demo">
      <BlowfishDetails title="Compatibility note" defaultOpen={true}>
        Most commonly used Blowfish-style aliases are supported.
      </BlowfishDetails>
      <BlowfishAccordion heading="FAQ">
        <BlowfishAccordionItem title="Can I use Hugo templates directly?" open={true}>
          No. This package recreates behavior with Astro-native components.
        </BlowfishAccordionItem>
        <BlowfishAccordionItem title="Is SSR required?">
          No, static output works for Cloudflare Pages free tier.
        </BlowfishAccordionItem>
      </BlowfishAccordion>
    </div>
    <pre><code>{`<BlowfishDetails title="Compatibility note" defaultOpen={true}>...</BlowfishDetails>
<BlowfishAccordion heading="FAQ">
  <BlowfishAccordionItem title="Can I use Hugo templates directly?" open={true}>...</BlowfishAccordionItem>
</BlowfishAccordion>`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Figure and Gallery</h2>
    <div class="docs-demo">
      <BlowfishFigure
        src="https://images.unsplash.com/photo-1482192505345-5655af888cc4?w=1200"
        alt="Mountain"
        caption="Figure with card framing"
      />
      <BlowfishGallery
        cols={3}
        items={[
          { image: 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?w=900', title: 'One' },
          { image: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=900', title: 'Two' },
          { image: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=900', title: 'Three' }
        ]}
      />
    </div>
    <pre><code>{`<BlowfishFigure src="/image.jpg" alt="Mountain" caption="Figure with card framing" />
<BlowfishGallery cols={3} items={[{ image: '/a.jpg', title: 'One' }]} />`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Tabs and Timeline</h2>
    <div class="docs-demo">
      <BlowfishTabs selected="first">
        <BlowfishTab title="first" open={true}>Tab one content</BlowfishTab>
        <BlowfishTab title="second">Tab two content</BlowfishTab>
      </BlowfishTabs>
      <BlowfishTimeline title="Project timeline">
        <BlowfishTimelineItem name="Scaffold" time="2026-02-17">Initial package and docs.</BlowfishTimelineItem>
        <BlowfishTimelineItem name="Parity" time="2026-02-18">Extended aliases and components.</BlowfishTimelineItem>
      </BlowfishTimeline>
    </div>
    <pre><code>{`<BlowfishTabs selected="first">
  <BlowfishTab title="first" open={true}>Tab one content</BlowfishTab>
</BlowfishTabs>
<BlowfishTimeline title="Project timeline">
  <BlowfishTimelineItem name="Scaffold" time="2026-02-17">...</BlowfishTimelineItem>
</BlowfishTimeline>`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>KaTeX, Mermaid, TypeIt</h2>
    <div class="docs-demo">
      <p><strong>KaTeX:</strong> <BlowfishKaTeX expr="E=mc^2" /></p>
      <BlowfishMermaid diagram={`graph TD
A[Astro] --> B[Theme]
B --> C[Components]`} />
      <p><strong>TypeIt:</strong> <BlowfishTypeIt strings={['portable', 'composable', 'static']} speed={70} loop={false} /></p>
    </div>
    <pre><code>{`<BlowfishKaTeX expr="E=mc^2" />
<BlowfishMermaid diagram={

graph TD
A[Astro] --> B[Theme]
} />
<BlowfishTypeIt strings={['portable', 'composable']} speed={70} />`}</code></pre>
  </section>

  <section class="docs-block bf-card">
    <h2>Video and YouTube Lite</h2>
    <div class="docs-demo">
      <BlowfishVideo src={sampleVideo} title="Local/hosted video" controls={true} muted={true} />
      <BlowfishYouTubeLite url="https://www.youtube.com/watch?v=dQw4w9WgXcQ" label="YouTube Lite" />
      <BlowfishGitHubCard owner="withastro" repository="astro" />
    </div>
    <pre><code>{`<BlowfishVideo src="/videos/intro.mp4" title="Local/hosted video" controls={true} />
<BlowfishYouTubeLite url="https://www.youtube.com/watch?v=dQw4w9WgXcQ" label="YouTube Lite" />
<BlowfishGitHubCard owner="withastro" repository="astro" />`}</code></pre>
  </section>
</BlowfishBaseLayout>

<style>
  .docs-hero {
    padding: 1rem;
    display: grid;
    gap: 1rem;
  }

  .docs-hero h1 {
    margin: 0;
    line-height: 1.2;
  }

  .docs-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .docs-block {
    padding: 1rem;
  }

  .docs-block h2 {
    margin-top: 0;
    margin-bottom: 0.8rem;
    font-size: 1.05rem;
  }

  .docs-demo {
    display: grid;
    gap: 0.75rem;
  }

  .docs-grid-2 {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.75rem;
  }

  pre {
    margin: 0.8rem 0 0;
    overflow: auto;
    background: #0d1016;
    border: 1px solid var(--bf-border);
    border-radius: 10px;
    padding: 0.75rem;
    font-size: 0.8rem;
    line-height: 1.5;
  }

  code {
    font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
  }

  @media (max-width: 720px) {
    .docs-grid-2 {
      grid-template-columns: 1fr;
    }
  }
</style>
