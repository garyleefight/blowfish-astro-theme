---
import BlowfishSiteLayout from '../layouts/site/BlowfishSiteLayout.astro';
import BlowfishBlocksHeader from '../components/docs/BlowfishBlocksHeader.astro';
import BlowfishCategoryCard from '../components/docs/BlowfishCategoryCard.astro';

const categories = [
  {
    href: '/blocks/layouts',
    title: 'Layouts',
    description: 'Blowfish homepage layout variants (profile/page/hero/background/card/custom) with dedicated previews.',
    componentCount: 1,
    icon: 'list',
  },
  {
    href: '/blocks/content',
    title: 'Content',
    description: 'Common UI blocks for article/content pages: alerts, tabs, accordions, badges, buttons, and timelines.',
    componentCount: 14,
    icon: 'file-lines',
  },
  {
    href: '/blocks/media-interactive',
    title: 'Media + Interactive',
    description: 'Visual and runtime-driven components: gallery, carousel, chart, KaTeX, mermaid, video, and typed text.',
    componentCount: 13,
    icon: 'image',
  },
  {
    href: '/blocks/navigation',
    title: 'Navigation + Site',
    description: 'Navigation helpers: breadcrumbs, pagination, article prev/next, term links, scroll-top, and footer.',
    componentCount: 9,
    icon: 'bars',
  },
  {
    href: '/blocks/meta-analytics',
    title: 'Meta + Analytics',
    description: 'Page metadata components for views/likes and analytics provider integration setup.',
    componentCount: 4,
    icon: 'bell',
  },
  {
    href: '/blocks/markdown-render',
    title: 'Markdown Render',
    description: 'Markdown rendering hooks: heading anchors, GitHub alerts, external links, and code block titles.',
    componentCount: 5,
    icon: 'code',
  },
];
---

<BlowfishSiteLayout
  title="Blowfish Blocks"
  description="Browse Blowfish Astro components by category, with dedicated demo pages and examples."
  siteTitle="Blowfish Blocks"
  nav={[
    { label: 'All Blocks', href: '/' },
    { label: 'Layouts', href: '/blocks/layouts' },
    { label: 'Theme', href: '/theme/list' },
  ]}
  headerLayout="basic"
  enableAppearanceToggle={true}
  footerMenu={[
    { name: 'Blocks', url: '/', pre: 'list' },
    { name: 'Search', url: '/search', pre: 'search' },
  ]}
>
  <BlowfishBlocksHeader
    title="Blowfish Blocks"
    description="A block-style component explorer. Each category has its own page with live examples and usage snippets."
  />

  <section class="mt-8 grid gap-4 sm:grid-cols-2 xl:grid-cols-3">
    {categories.map((category) => (
      <BlowfishCategoryCard {...category} />
    ))}
  </section>

  <section class="mt-8 rounded-2xl border border-neutral-300 bg-neutral-50/70 p-5 shadow-sm dark:border-neutral-700 dark:bg-neutral-800/60">
    <h2 class="m-0 text-xl font-semibold">Homepage Layout Shortcuts</h2>
    <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">
      Open dedicated previews to inspect Blowfish homepage.layout variants.
    </p>
    <div class="mt-4 flex flex-wrap gap-2 text-sm">
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/profile">Homepage: profile</a>
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/page">Homepage: page</a>
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/hero">Homepage: hero</a>
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/background">Homepage: background</a>
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/card">Homepage: card</a>
      <a class="rounded-md border border-neutral-300 px-3 py-1.5 no-underline hover:border-primary-500 hover:text-primary-600 dark:border-neutral-700 dark:hover:border-primary-400 dark:hover:text-primary-300" href="/blocks/previews/custom">Homepage: custom</a>
    </div>
  </section>
</BlowfishSiteLayout>
