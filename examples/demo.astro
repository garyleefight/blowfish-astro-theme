---
import BlowfishBaseLayout from '../src/layouts/BlowfishBaseLayout.astro';
import BlowfishAlert from '../src/components/BlowfishAlert.astro';
import BlowfishBadge from '../src/components/BlowfishBadge.astro';
import BlowfishButton from '../src/components/BlowfishButton.astro';
import BlowfishFigure from '../src/components/BlowfishFigure.astro';
import BlowfishGallery from '../src/components/BlowfishGallery.astro';
import '../src/styles/theme.css';
---

<BlowfishBaseLayout title="Blowfish Astro Theme" description="Preview">
  <BlowfishBadge text="Compatibility" color="primary" />
  <BlowfishAlert type="info" title="Note" content="This is Astro-native compatibility mode." />
  <BlowfishButton href="/" label="Home" variant="outline" />

  <BlowfishFigure
    src="https://images.unsplash.com/photo-1482192505345-5655af888cc4?w=1200"
    alt="Mountain"
    caption="Figure with Blowfish-style card framing"
  />

  <BlowfishGallery
    columns={3}
    images={[
      { src: 'https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?w=800', alt: 'A', caption: 'One' },
      { src: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800', alt: 'B', caption: 'Two' },
      { src: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=800', alt: 'C', caption: 'Three' }
    ]}
  />
</BlowfishBaseLayout>
